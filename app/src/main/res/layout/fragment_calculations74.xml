<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBat_calculations5"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:textAlignment="center"
            tools:context=".ui.calculations.CalculationsFragment5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_cell_usefultoknow"
                android:padding="5dp">

                <Spinner
                    android:id="@+id/spinner5_calculations74"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_black"
                    android:popupBackground="@drawable/background_black"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_input5"
                    app:layout_constraintEnd_toEndOf="@+id/spinner1_calculations74"
                    app:layout_constraintStart_toStartOf="@+id/spinner1_calculations74"
                    app:layout_constraintTop_toTopOf="@+id/calculations74_input5" />

                <Spinner
                    android:id="@+id/spinner3_calculations74"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_black"
                    android:popupBackground="@drawable/background_black"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_input3"
                    app:layout_constraintEnd_toEndOf="@+id/spinner1_calculations74"
                    app:layout_constraintStart_toStartOf="@+id/spinner1_calculations74"
                    app:layout_constraintTop_toTopOf="@+id/calculations74_input3" />

                <Spinner
                    android:id="@+id/spinner4_calculations74"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_black"
                    android:popupBackground="@drawable/background_black"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_input4"
                    app:layout_constraintEnd_toEndOf="@+id/spinner1_calculations74"
                    app:layout_constraintStart_toStartOf="@+id/spinner1_calculations74"
                    app:layout_constraintTop_toTopOf="@+id/calculations74_input4" />

                <EditText
                    android:id="@+id/calculations74_input4"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_txt4"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_input1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_input1"
                    app:layout_constraintTop_toBottomOf="@id/calculations74_input3" />

                <EditText
                    android:id="@+id/calculations74_input5"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_txt5"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_input1"
                    app:layout_constraintStart_toEndOf="@+id/calculations74_txt1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_input1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_input4" />

                <Spinner
                    android:id="@+id/spinner2_calculations74"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:popupBackground="@drawable/background_black"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_input2"
                    app:layout_constraintEnd_toEndOf="@+id/spinner1_calculations74"
                    app:layout_constraintStart_toStartOf="@+id/spinner1_calculations74"
                    app:layout_constraintTop_toBottomOf="@+id/spinner1_calculations74" />

                <EditText
                    android:id="@+id/calculations74_input3"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_txt3"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_input1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_input1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_input2" />

                <EditText
                    android:id="@+id/calculations74_input2"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_txt2"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_input1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_input1"
                    app:layout_constraintTop_toBottomOf="@id/calculations74_input1" />

                <Spinner
                    android:id="@+id/spinner1_calculations74"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_black"
                    android:popupBackground="@drawable/background_black"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_input1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations74" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/parametres"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_calculations74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/calculations74_txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="30dp"
                    android:text="@string/sizeA"
                    app:layout_constraintEnd_toStartOf="@+id/calculations74_input1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations74" />

                <TextView
                    android:id="@+id/calculations74_txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="30dp"
                    android:text="@string/sizeC"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_txt1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_txt1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_txt1" />

                <TextView
                    android:id="@+id/calculations74_txt3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="30dp"
                    android:text="@string/priceBeton"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_txt1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_txt1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_txt2" />

                <EditText
                    android:id="@+id/calculations74_input1"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/calculations74_txt1"
                    app:layout_constraintEnd_toStartOf="@+id/spinner1_calculations74"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations74" />

                <TextView
                    android:id="@+id/calculations74_txt4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="30dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_txt1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_txt1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_txt3" />

                <TextView
                    android:id="@+id/calculations74_txt5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center_vertical"
                    android:minHeight="30dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/calculations74_txt1"
                    app:layout_constraintStart_toStartOf="@+id/calculations74_txt1"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_txt4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_cell_usefultoknow"
                android:padding="5dp">

                <TextView
                    android:id="@+id/calculations74_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/margin_left"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_result1" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/results"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/calculations74_txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/calculation74_text1"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <TextView
                    android:id="@+id/calculations74_txt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/calculation74_text2"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calculations74_txt6" />

                <TextView
                    android:id="@+id/calculations74_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margin_left"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomBat_calculations5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgBottomCopy_calculations74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notes" />

        <ImageView
            android:id="@+id/imgBottomHome_calculations74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@drawable/ic_home_orange" />

        <ImageView
            android:id="@+id/imgBottomSave_calculations74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notebook" />
    </LinearLayout>
</RelativeLayout>