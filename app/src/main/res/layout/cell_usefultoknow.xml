<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_uToKnow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_cell_usefultoknow">

    <ImageView
        android:id="@+id/img_cell_uToKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_usefultoknow" />

    <TextView
        android:id="@+id/txt_cell_uToKnow_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif-black"
        android:text="Усадка бетона"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/img_cell_uToKnow_arrow"
        app:layout_constraintStart_toEndOf="@+id/img_cell_uToKnow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_cell_uToKnow_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/margin_left"
        android:maxLines="2"
        android:text="Все о том как правильно замешать бетон и не боятьс усадки массы."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_cell_uToKnow_arrow"
        app:layout_constraintStart_toEndOf="@+id/img_cell_uToKnow"
        app:layout_constraintTop_toBottomOf="@+id/txt_cell_uToKnow_title" />

    <ImageView
        android:id="@+id/img_cell_uToKnow_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_black" />
</androidx.constraintlayout.widget.ConstraintLayout>