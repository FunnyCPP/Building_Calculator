<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBat_calculations5"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:textAlignment="center"
            tools:context=".ui.calculations.CalculationsFragment5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_cell_usefultoknow"
                android:padding="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn1_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_orange"
                    android:text="Очистить"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/btn2_calculations46"
                    app:layout_constraintStart_toStartOf="@+id/txt3_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/txt5_46" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn2_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_orange"
                    android:text="Посчитать"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/calculations46_input6"
                    app:layout_constraintStart_toEndOf="@+id/btn1_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/txt5_46" />

                <EditText
                    android:id="@+id/calculations46_input6"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/calculations46_input4"
                    app:layout_constraintTop_toBottomOf="@+id/calculations46_input5" />

                <TextView
                    android:id="@+id/txt4_46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/txt5_46"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calculations46_input3" />

                <TextView
                    android:id="@+id/txt5_46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt4_46"
                    app:layout_constraintTop_toBottomOf="@+id/calculations46_input6" />

                <EditText
                    android:id="@+id/calculations46_input4"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt4_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations46" />

                <EditText
                    android:id="@+id/calculations46_input5"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/calculations46_input4"
                    app:layout_constraintStart_toStartOf="@+id/calculations46_input4"
                    app:layout_constraintTop_toBottomOf="@+id/calculations46_input4" />

                <EditText
                    android:id="@+id/calculations46_input3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/calculations46_input2"
                    app:layout_constraintStart_toStartOf="@+id/calculations46_input2"
                    app:layout_constraintTop_toBottomOf="@+id/calculations46_input2" />

                <EditText
                    android:id="@+id/calculations46_input2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/calculations46_input1"
                    app:layout_constraintStart_toStartOf="@+id/calculations46_input1"
                    app:layout_constraintTop_toBottomOf="@id/calculations46_input1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/parametres"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/txt1_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="a"
                    app:layout_constraintEnd_toStartOf="@+id/calculations46_input1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations46" />

                <TextView
                    android:id="@+id/txt2_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="b"
                    app:layout_constraintEnd_toStartOf="@+id/calculations46_input2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt1_calculations46" />

                <TextView
                    android:id="@+id/txt3_calculations46"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="c"
                    app:layout_constraintEnd_toEndOf="@+id/txt2_calculations46"
                    app:layout_constraintStart_toStartOf="@+id/txt2_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/txt2_calculations46" />

                <EditText
                    android:id="@+id/calculations46_input1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_black"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/txt4_calculations46"
                    app:layout_constraintStart_toEndOf="@+id/txt1_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations46" />

                <TextView
                    android:id="@+id/txt4_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="α"
                    app:layout_constraintEnd_toStartOf="@+id/calculations46_input4"
                    app:layout_constraintStart_toEndOf="@+id/calculations46_input1"
                    app:layout_constraintTop_toBottomOf="@+id/img_calculations46" />

                <TextView
                    android:id="@+id/txt5_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="β"
                    app:layout_constraintEnd_toEndOf="@+id/txt4_calculations46"
                    app:layout_constraintStart_toStartOf="@+id/txt4_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/txt4_calculations46" />

                <TextView
                    android:id="@+id/txt6_calculations46"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="γ"
                    app:layout_constraintStart_toStartOf="@+id/txt4_calculations46"
                    app:layout_constraintTop_toBottomOf="@+id/txt5_calculations46" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomBat_calculations5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgBottomCopy_calculations46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notes" />

        <ImageView
            android:id="@+id/imgBottomHome_calculations46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:srcCompat="@drawable/ic_home_orange" />

        <ImageView
            android:id="@+id/imgBottomSave_calculations46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notebook" />
    </LinearLayout>
</RelativeLayout>