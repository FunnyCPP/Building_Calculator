<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_categories"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.codart.building_calculator.ui.categories.CategoriesFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_formulasFragment"
            app:destination="@id/formulasFragment" />
    </fragment>
    <activity
        android:id="@+id/categoriesActivity"
        android:name="com.codart.building_calculator.ui.CategoriesActivity"
        android:label="CategoriesActivity" />
    <fragment
        android:id="@+id/formulasFragment"
        android:name="com.codart.building_calculator.ui.formulas.FormulasFragment"
        android:label="fragment_formulas"
        tools:layout="@layout/fragment_formulas" />
</navigation>